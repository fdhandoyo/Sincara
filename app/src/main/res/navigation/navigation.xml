<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="org.jvf.sincara.ui.login.LoginFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="org.jvf.sincara.ui.dashboard.DashboardFragment"
        android:label="@string/dashboardFragment"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_angkaFragment"
            app:destination="@id/angkaFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_alphabetFragment"
            app:destination="@id/alphabetFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_komunikasiFragment"
            app:destination="@id/komunikasiFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/angkaFragment"
        android:name="org.jvf.sincara.ui.angka.AngkaFragment"
        android:label="@string/angkaFragment"
        tools:layout="@layout/fragment_angka"/>
    <fragment
        android:id="@+id/alphabetFragment"
        android:name="org.jvf.sincara.ui.alphabet.AlphabetFragment"
        android:label="@string/hurufFragment"
        tools:layout="@layout/fragment_alphabet"/>
    <fragment
        android:id="@+id/komunikasiFragment"
        android:name="org.jvf.sincara.ui.angka.KomunikasiFragment"
        android:label="@string/komunikasiFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="org.jvf.sincara.ui.profile.ProfileFragment"
        android:label="@string/profileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>

