<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/tombolAlfabet"
        android:layout_width="234dp"
        android:layout_height="275dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/card_alphabet_shape"
        android:contentDescription="@string/txtAlfabet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="174dp"
        android:layout_height="171dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="@+id/tombolAlfabet"
        app:layout_constraintStart_toStartOf="@+id/tombolAlfabet"
        app:layout_constraintTop_toTopOf="@+id/tombolAlfabet"
        tools:src="@drawable/baseline_broken_image_24" />

    <TextView
        android:id="@+id/textAlphabet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Huruf A"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tombolAlfabet"
        app:layout_constraintStart_toStartOf="@+id/tombolAlfabet"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>